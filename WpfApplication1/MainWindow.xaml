<Window x:Name="Protect_PDF" x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="Protect PDF" Height="157" Width="261" ResizeMode="NoResize" Background="#FFF3F3F3" SizeToContent="WidthAndHeight" WindowStyle="ToolWindow">
    <Grid Margin="0,0,0,0">

        <Button Content="Full Protection" HorizontalAlignment="Left" Height="23" Margin="16,42,0,0" VerticalAlignment="Top" Width="88" Click="Button_Full"/>
        <TextBox x:Name="tbx" HorizontalAlignment="Center" Height="26" TextWrapping="Wrap" VerticalAlignment="Top" Width="226" FontFamily="Segoe WP" FontSize="13.333" Margin="16,10,13,0"/>
        <Button x:Name="tbxcopy" Content="Allow Copy" Height="23" Margin="142,42,10,0" VerticalAlignment="Top" Click="Button_Copy"/>
        <Button Content="Clear" HorizontalAlignment="Left" Margin="98,80,0,20" Width="60" Height="25" Click="Button_Clear"/>

    </Grid>
</Window>
